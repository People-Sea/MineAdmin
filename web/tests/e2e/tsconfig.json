{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["pages/*.page.ts"],
      "@fixtures/*": ["fixtures/*.fixture.ts"],
      "@utils/*": ["utils/*.ts"]
    },
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": [
    "**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
